{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "nmsl",
  "version": "0.1.0",
  "identifier": "io.nmsl.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NodalMinecraftServerLauncher",
        "label": "main",
        "width": 1000,
        "height": 600,
        "resizable": true,
        "decorations": true
      },
      {
        "title": "NMSL实例管理",
        "label": "nmslinstancemanage",
        "width": 900,
        "height": 550,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "maximized": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "windows": {
      "installMode": "basicUi"
    },
    "deep-link": {
      "desktop": {
        "schemes": ["nmsl", "nodal-msl"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
